# npm configuration for node-package-builder

# Default registry
registry=https://registry.npmjs.org/

# Package access level
access=public

# Save exact versions in package.json
save-exact=true

# Use package-lock.json
package-lock=true

# Engine strict mode
engine-strict=true

# Audit level
audit-level=moderate

# Fund messages
fund=false

# Progress indicator
progress=true

# Optional: Uncomment if you want to use a specific npm version
# npm-version=9
